---
import Layout from "@layouts/Layout.astro";
import { getI18N } from "@i18n/index";
import Container from "@components/Container.astro";
import ContenidoDocumentosReact from "./ContenidoDocumentosReact";
const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
const { title, description } = i18n.SEO;
import DocsContent from "@components/docs/DocsContent.astro";
---

<Layout title={title} description={description}>
  <Container>
    <h2
      class="text-primary text-center font-bold text-4xl leading-tight py-4 md:text-left"
    >
      Documentos
    </h2>
    <!-- <ContenidoDocumentosReact client:load /> -->
    <DocsContent />
  </Container>
</Layout>
