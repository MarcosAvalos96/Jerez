---
interface Props {
  placeHolder: string;
}
const { placeHolder } = Astro.props;
---

<section class="flex items-center justify-center pt-2">
  <div class="relative w-full max-w-sm">
    <input
      type="text"
      placeholder={placeHolder}
      class="w-full pl-4 pr-4 py-2 border border-gray-300 rounded-full focus:outline-none focus:ring-2 focus:ring-SoftBlue"
    />
    <div class="absolute inset-y-0 right-0 flex items-center pr-4">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        fill="currentColor"
        class="w-8 h-8 text-SoftBlue"
      >
        <path
          fill-rule="evenodd"
          d="M10.5 3.75a6.75 6.75 0 1 0 0 13.5 6.75 6.75 0 0 0 0-13.5ZM2.25 10.5a8.25 8.25 0 1 1 14.59 5.28l4.69 4.69a.75.75 0 1 1-1.06 1.06l-4.69-4.69A8.25 8.25 0 0 1 2.25 10.5Z"
          clip-rule="evenodd"></path>
      </svg>
    </div>
  </div>
</section>
