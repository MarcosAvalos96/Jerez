---
import ShareButton from "@assets/icons/maps/ShareButton.astro";
interface Props {
  title: string;
  subTitle: string;
}
const { title, subTitle } = Astro.props;
---

<section class="shadow-sm duration-300 hover:shadow-md">
  <article
    class="aspect-video bg-slate-600 max-w-xl w-full rounded-sm text-gray-100 bg-cover bg-center"
    style="background-image: url(https://images.unsplash.com/photo-1614527333177-d27e9e29ff98?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=950&q=80);"
  >
    <div class="bg-black bg-opacity-60 p-6 rounded-sm h-full">
      <h1 class="text-2xl text-gray-100 text-center font-extrabold">
        {title}
      </h1>
      <div class="mt-2 text-center mb-6 md:mb-8 lg:mb-16">
        <span class="text-md">{subTitle}</span>
      </div>
      <a
        class="flex justify-end"
        href="#"
        target="_blank"
        aria-label="Shared Button"
      >
        <ShareButton />
      </a>
    </div>
  </article>
</section>
