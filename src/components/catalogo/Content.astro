---
import Creado from "./Creado.astro";
import Formato from "./Formato.astro";
import Titulo from "./Titulo.astro";
import CheckBox from "./CheckBox.astro";
import Buscar from "./Buscar.astro";
import Container from "@components/Container.astro";
import Collapsible from "./Collapsible.astro";
---

<Container className="py-4">
  <main class="bg-slate-200 p-4 rounded-xl my-4">
    <h2
      class="text-primary text-center lg:text-left font-bold text-4xl leading-tight mb-6"
    >
      Cat√°logo y Descarga
    </h2>

    <section class="">
      <div
        class="flex flex-col md:flex-row items-center justify-between space-y-4 md:space-y-0 space-x-4"
      >
        <div class="flex flex-grow items-center space-x-4">
          <!-- Primer CheckList -->
          <Creado />
          <!-- Segundo CheckList -->
          <Formato />
          <!-- Tercer CheckList -->
          <Titulo />
        </div>
        <div class="flex items-center">
          <Buscar />
        </div>
      </div>

      <div class="flex flex-row justify-center items-center mt-6 space-x-4">
        <CheckBox />
        <button class="btn">Buscar</button>
      </div>
    </section>
  </main>
  <Collapsible />
</Container>
