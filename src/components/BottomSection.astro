---
import { getI18N } from "@i18n/index";
import { Image } from "astro:assets";
import Bottom from "@assets/images/bottom.webp";
import Container from "./Container.astro";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
const { title, body } = i18n.BottomSection;
---

<Container className=" p-8 bg-slate-600 rounded-lg my-8">
  <div class="flex flex-col md:flex-row items-center justify-between">
    <div class="md:w-2/3 mb-8 md:mb-0">
      <h2 class="text-white font-bold text-5xl leading-tight mb-6">
        {title}
      </h2>
      <p class="text-white text-xl mb-8">
        {body}
      </p>
    </div>
    <div class="md:w-1/3">
      <Image
        src={Bottom}
        alt="Jerez"
        class="w-full rounded-lg shadow-lg"
        quality={"mid"}
        format={"avif"}
        loading={"eager"}
      />
    </div>
  </div>
</Container>
