---
import BottomImages from "./BottomImages.astro";
const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
import { getI18N } from "@i18n/index";
const { body, title } = i18n.Main;
---

<section
  class="px-4 py-2 w-fit lg:w-1/2 flex flex-col place-content-center items-center text-center md:text-left md:place-content-start"
>
  <div class="flex flex-col lg:flex-row items-start mb-8 justify-between gap-4">
    <div>
      <h1 class="text-4xl text-white font-extrabold mb-4">
        {title}
      </h1>
      <blockquote class="p-2 italic border-l-8 border-l-YellowPrimary">
        <p class="text-white text-xl text-pretty">
          {body}
        </p>
      </blockquote>
    </div>
  </div>
  <BottomImages />
</section>
